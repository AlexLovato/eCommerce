<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - 1337 electronics</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("1337 electronics", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    @Html.Action("MiniCart", "Cart")
                    @*displays the mini cart*@
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                        @*if the user is logged in and an admin, show the links to the admin sections*@
                        @if (Request.IsAuthenticated && User.IsInRole("admin"))
                        {
                            <ul id="menu">
                                <li><a href="@Url.Action("Index","Product")">Products</a></li>
                                <li><a href="@Url.Action("Index","Image")">Images</a></li>
                                <li><a href="@Url.Action("Index","Supplier")">Supplier</a></li>
                                <li><a href="@Url.Action("Index","Category")">Categories</a></li>
                                <li><a href="@Url.Action("Index","Review")">Review</a></li>
                            </ul>
                        }
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - 1337 electronics </p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/Scripts/Main.js")
        @RenderSection("scripts", required: false)
    </body>
</html>
